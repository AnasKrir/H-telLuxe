@model ProgrammeFidelite

<h1>Modifier un programme de fidélité</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div>
        <label asp-for="Points"></label>
        <input asp-for="Points" type="number" />
        <span asp-validation-for="Points"></span>
    </div>
    <div>
        <label asp-for="ClientId"></label>
        <select asp-for="ClientId" asp-items="ViewBag.Clients"></select>
        <span asp-validation-for="ClientId"></span>
    </div>
    <button type="submit" class="btn btn-primary">Enregistrer</button>
    <a asp-action="Index" class="btn btn-secondary">Annuler</a>
</form>
