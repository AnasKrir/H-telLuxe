@model IEnumerable<Chambre>

<h1>Liste des Chambres</h1>

<table>
    <thead>
        <tr>
            <th>Type</th>
            <th>Capacité</th>
            <th>Tarif par nuit</th>
            <th>Disponibilité</th>
            <th>État de maintenance</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var chambre in Model)
        {
            <tr>
                <td>@chambre.Type</td>
                <td>@chambre.Capacite</td>
                <td>@chambre.TarifParNuit €</td>
                <td>@chambre.Disponibilite</td>
                <td>@chambre.EtatMaintenance</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@chambre.Id">Modifier</a> |
                    <a asp-action="Delete" asp-route-id="@chambre.Id">Supprimer</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Ajouter une nouvelle chambre</a>
