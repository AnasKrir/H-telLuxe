@{
    ViewData["Title"] = "Dashboard";
}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard - Hotel Luxe</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <style>
        body {
            background: linear-gradient(135deg, #eef2f7, #dce3f1);
            height: 100vh;
            font-family: 'Poppins', sans-serif;
            overflow-x: hidden;
            display: flex;
        }

        .sidebar {
            width: 280px;
            height: 100vh;
            background: linear-gradient(180deg, #002766, #004499);
            color: white;
            position: fixed;
            top: 0;
            left: 0;
            display: flex;
            flex-direction: column;
            padding: 25px;
            box-shadow: 5px 0 20px rgba(0, 0, 0, 0.3);
            border-radius: 0 20px 20px 0;
        }

        .sidebar h2 {
            font-size: 2rem;
            margin-bottom: 30px;
            text-align: center;
            font-weight: bold;
            letter-spacing: 1px;
        }

        .sidebar a {
            color: white;
            text-decoration: none;
            margin: 14px 0;
            padding: 14px;
            font-size: 1.2rem;
            border-radius: 10px;
            display: flex;
            align-items: center;
            transition: all 0.3s;
        }

        .sidebar a i {
            margin-right: 14px;
            font-size: 1.5rem;
        }

        .sidebar a:hover {
            background: rgba(255, 255, 255, 0.2);
            transform: scale(1.05);
        }

        .main-content {
            margin-left: 280px;
            padding: 40px;
            flex-grow: 1;
        }

        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            background: white;
            padding: 20px;
            border-radius: 15px;
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
        }

        .header h1 {
            font-size: 2.5rem;
            font-weight: bold;
            color: #002766;
        }

        .stats {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
            gap: 20px;
            margin-top: 30px;
        }

        .card {
            border: none;
            border-radius: 20px;
            padding: 20px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
            text-align: center;
        }

        .card h3 {
            font-size: 1.5rem;
            margin-bottom: 10px;
        }

        .card span {
            font-size: 2rem;
            font-weight: bold;
        }

        .card:nth-child(1) span {
            color: blue;
        }
        .card:nth-child(2) span {
            color: green;
        }
        .card:nth-child(3) span {
            color: orange;
        }
        .card:nth-child(4) span {
            color: red;
        }
    </style>
</head>
<body>
    <div class="sidebar">
        <h2>Hotel Luxe</h2>
        <a href="dashboard.html"><i class="fas fa-chart-line"></i> Tableau de bord</a>
        <a href="clients.html"><i class="fas fa-users"></i> Clients</a>
        <a href="chambres.html"><i class="fas fa-hotel"></i> Chambres</a>
        <a href="reservations.html"><i class="fas fa-calendar-check"></i> Réservations</a>
        <a href="services.html"><i class="fas fa-bell-concierge"></i> Services</a>
        <a href="paiements.html" class="active"><i class="fas fa-money-check-alt"></i> Paiements</a>
        <a href="parametres.html"><i class="fas fa-sliders-h"></i> Paramètres</a>
        <a href="login.html"><i class="fas fa-sign-out-alt"></i> Déconnexion</a>
    </div>

    <div class="main-content">
        <div class="header">
            <h1>Bienvenue, Réceptionniste Adam</h1>
            <button class="btn btn-primary">Ajouter une réservation</button>
        </div>

        <div class="stats">
            <div class="card">
                <h3>Clients</h3>
                <span>2</span>
            </div>
            <div class="card">
                <h3>Chambres Disponibles</h3>
                <span>45</span>
            </div>
            <div class="card">
                <h3>Réservations</h3>
                <span>2</span>
            </div>
            <div class="card">
                <h3>Revenus Mensuels</h3>
                <span>5 000 000 DH</span>
            </div>
        </div>
    </div>
</body>
</html>

