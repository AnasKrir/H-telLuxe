@model User

@{
    ViewData["Title"] = "Supprimer un Utilisateur";
}

<div class="card shadow-sm">
    <div class="card-header bg-white">
        <h4 class="mb-0">Supprimer un Utilisateur</h4>
    </div>
    <div class="card-body">
        <div class="alert alert-danger">
            <h5>Êtes-vous sûr de vouloir supprimer cet utilisateur ?</h5>
            <p>Cette action est irréversible.</p>
        </div>
        <dl class="row">
            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>
            <dt class="col-sm-3">Mot de passe</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Password)</dd>
            <dt class="col-sm-3">Rôle</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Role)</dd>
        </dl>
        <form asp-action="Delete" class="mt-4">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">
                <i class="fas fa-trash"></i> Confirmer la suppression
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Retour à la liste
            </a>
        </form>
    </div>
</div>