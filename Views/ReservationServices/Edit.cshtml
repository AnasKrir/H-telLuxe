@model ReservationService

<h1>Modifier une r√©servation de service</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div>
        <label asp-for="ServiceId"></label>
        <select asp-for="ServiceId" asp-items="ViewBag.Services"></select>
        <span asp-validation-for="ServiceId"></span>
    </div>
    <div>
        <label asp-for="ClientId"></label>
        <select asp-for="ClientId" asp-items="ViewBag.Clients"></select>
        <span asp-validation-for="ClientId"></span>
    </div>
    <div>
        <label asp-for="DateReservation"></label>
        <input asp-for="DateReservation" type="date" />
        <span asp-validation-for="DateReservation"></span>
    </div>
    <button type="submit" class="btn btn-primary">Enregistrer</button>
    <a asp-action="Index" class="btn btn-secondary">Annuler</a>
</form>
