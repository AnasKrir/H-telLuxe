@model IEnumerable<ReservationService>

<h1>Liste des réservations de services</h1>

<table class="table">
    <thead>
        <tr>
            <th>Service</th>
            <th>Client</th>
            <th>Date de réservation</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var reservation in Model)
        {
            <tr>
                <td>@reservation.Service.NomService</td>
                <td>@reservation.Client.Nom @reservation.Client.Prenom</td>
                <td>@reservation.DateReservation.ToShortDateString()</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@reservation.Id" class="btn btn-primary">Modifier</a>
                    <a asp-action="Delete" asp-route-id="@reservation.Id" class="btn btn-danger">Supprimer</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-success">Ajouter une réservation</a>
