@model IEnumerable<Paiement>

<h1>Liste des paiements</h1>

<table class="table">
    <thead>
        <tr>
            <th>Montant</th>
            <th>Date</th>
            <th>Mode</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var paiement in Model)
        {
            <tr>
                <td>@paiement.Montant â‚¬</td>
                <td>@paiement.DatePaiement.ToShortDateString()</td>
                <td>@paiement.ModePaiement</td>
                <td>@paiement.Status</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@paiement.Id" class="btn btn-primary">Modifier</a>
                    <a asp-action="Delete" asp-route-id="@paiement.Id" class="btn btn-danger">Supprimer</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-success">Ajouter un nouveau paiement</a>
