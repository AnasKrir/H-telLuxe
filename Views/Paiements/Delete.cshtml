@model Paiement

<h1>Supprimer un paiement</h1>

<p>Êtes-vous sûr de vouloir supprimer ce paiement ?</p>

<div>
    <p>Montant : @Model.Montant €</p>
    <p>Date : @Model.DatePaiement.ToShortDateString()</p>
    <p>Mode : @Model.ModePaiement</p>
    <p>Status : @Model.Status</p>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Confirmer</button>
    <a asp-action="Index" class="btn btn-secondary">Annuler</a>
</form>
